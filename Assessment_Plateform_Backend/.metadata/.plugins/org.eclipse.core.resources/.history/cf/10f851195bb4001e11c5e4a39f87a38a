package com.krishna.gateway.externalService;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import com.krishna.gateway.ErrorHandlaer.CustomErrorDecoder;
import com.krishna.gateway.dto.RegistrationDto;


@FeignClient(name = "REGISTRATION-SERVICE",configuration = CustomErrorDecoder.class)
public interface UserService {

	@GetMapping("/users/get/{id}")
	RegistrationDto getUserById(@PathVariable("id") int id);

}
